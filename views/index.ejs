<h1>Contact List Manager</h1>
    <div class=" w3l-login-form">
        <h2>Register Here</h2>
        <form action="/register" method="POST">
		
        <% include ./partials/messages %>
            <div class=" w3l-form-group">
                <label>First Name:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="firstname" placeholder="Firstname" value="<%= typeof firstname != 'undefined' ? firstname : '' %>" />
                </div>
            </div>
			<div class=" w3l-form-group">
                <label>Last Name:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="lastname" placeholder="Lastname" value="<%= typeof lastname != 'undefined' ? lastname : '' %>"/>
                </div>
            </div>
			<div class=" w3l-form-group">
                <label>Email:</label>
                <div class="group">
                    <i class="fas fa-envelope"></i>
                    <input type="text" class="form-control" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" name="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                </div>
            </div>
            
            <button type="submit">Register</button>
        </form>
        <p class=" w3l-register-p">Already have an account?<a href="/login" class="register"> Login</a></p>
    </div>